fs = 250;            
t = 0:1/fs:20;       
N = length(t);

eeg = 0.8*randn(1, N);

alpha_freq = 10;
alpha_wave = sin(2*pi*alpha_freq*t);

alpha_periods = [2 3; 6 7; 9 10; 13 14; 18 19];
for i = 1:size(alpha_periods,1)
    idx = (t >= alpha_periods(i,1)) & (t <= alpha_periods(i,2));
    eeg(idx) = eeg(idx) + alpha_wave(idx);
end

figure;
plot(t, eeg)
xlabel('Temps (s)')
ylabel('Amplitude (µV)')
title('Signal EEG simulé')
